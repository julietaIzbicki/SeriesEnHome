<section id="header" class="jumbotron text-center">
     <h1 class="display-3">JUMA_HBO</h1>
</section>
 
 
<section id="gallery">


@foreach(Series s in ViewBag.Series)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="card">
                    <img src="@s.ImagenSerie" alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title" id= "nombreS">@s.Nombre</h5>
                        <button type="button" onclick="masInformacion(@s.IdSerie)"  class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#informacion">Mas informacion</button>
                        
                        <button type="button" onclick="Temporadas(@s.IdSerie)" data-bs-toggle="modal" data-bs-target="#informacion"  class="btn btn-outline-success btn-sm">Mas temporadas</button>
                        <button type="button" onclick="Actores(@s.IdSerie)" data-bs-toggle="modal" data-bs-target="#informacion" class="btn btn-outline-success btn-sm">Actores</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
</section>




<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#informacion">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="informacion" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="texto_informacion" class="modal-body">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
  </div>